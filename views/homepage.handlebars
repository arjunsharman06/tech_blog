{{#if loggedIn}}

  <div class='btn-post'>
    <button>New Post</button>
  </div>

  <form class='new-post-form container'>
    <div class='primary'>Create New Post</div>
    <div class='form-content'>
      <label for='post-title'>Title:</label>
      <input type='input' id='post-title' name='post-title' />
    </div>
    <div class='form-content'>
      <label for='post-content'>Content:</label>
      <input type='textarea' name='post-content' />
    </div>
    <div class='btn'>
      <button type='submit'>Sign Up</button>
    </div>
  </form>
  <script src='./../javascript/add-post.js'></script>
{{/if}}